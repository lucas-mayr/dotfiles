set $mode_spotify [<-]Prev [Return]Play/Stop [->]Next
set $mode_system	ï€£[L]OCK    ï‚‹LOG[O]UT    ïŠ‹[S]USPEND    ï€¡[R]EBOOT    ï€‘[P]OWEROFF    ðŸ”Š[A]UDIO
bindsym $mod+Delete mode "$mode_system"
bindsym $mod+Insert mode "$mode_spotify" 

bindsym $mod+KP_Subtract exec sh $HOME/.config/i3/audio.sh master_down
bindsym $mod+KP_Add exec sh $HOME/.config/i3/audio.sh master_up
bindsym $mod+KP_Multiply exec sh $HOME/.config/i3/audio.sh toggle_mute 

mode "$mode_spotify" {
	bindsym Left exec sh $HOME/.config/i3/spotify.sh prev
	bindsym Return exec sh $HOME/.config/i3/spotify.sh toggle, mode "default"
	bindsym Right exec sh $HOME/.config/i3/spotify.sh next
	bindsym Escape mode "default"
}

mode "$mode_system" {
	bindsym l exec sh $HOME/.config/i3/i3exit.sh lock, mode "default"
		bindsym o exec sh $HOME/.config/i3/i3exit.sh logout, mode "default"
		bindsym s exec sh $HOME/.config/i3/i3exit.sh suspend, mode "default"
		bindsym r exec sh $HOME/.config/i3/i3exit.sh reboot, mode "default"
		bindsym p exec sh $HOME/.config/i3/i3exit.sh poweroff, mode "default"
		bindsym a exec sh $HOME/.config/i3/audio.sh gui, mode "default"
		# back to normal: Enter or Escape
		bindsym Return mode "default"
		bindsym Escape mode "default"
}

